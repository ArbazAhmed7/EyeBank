
@{ ViewData["Title"] = "Goth Enrollment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="#" rel="stylesheet" />
    <style>
        .dataTables_scrollBody {
            max-height: 370px !important;
        }

        .dataTables_length {
            visibility: hidden;
        }

        .dataTables_wrapper {
            font-size: 11px;
            font-style: initial;
        }

        h5 {
            font-family: 'Myriad Pro';
            color: #454091; /*transform Label Color*/
            font-size: 19px
        }

        label {
            font-family: 'Myriad Pro';
            color: #454091; /*transform Label Color*/
            font-size: 14px
        }

        #mainHeading {
            display: inline-block;
            padding: 5px 10px; /* Adjust padding as needed */
            border: solid lightgray; /* Border style */
            border-radius: 5px; /* Rounded corners */
            background-color: #d4f1f9; /*Form Name top Main Heading Color*/
            color: #263272;
        }

        #DivFormMode label {
            font-family: 'Myriad Pro';
            color: #263272; /*New Edit Check boxes Color*/
            font-size: 17px
        }

        #divAddress {
            background-color: #d4f1f9; /*Form Name top Main Heading Color*/
            border-radius: 10px;
        }

            #divAddress input {
                border-top-color: #d4f1f9;
                border-left-color: #d4f1f9;
                border-right-color: #d4f1f9;
                border-bottom-color: dimgrey;
                border-radius: 0px;
            }

            #divAddress label {
                color: dimgrey;
            }

        #txtCaptureRemarks {
            border-radius: 20px;
            background-color: #d4f1f9;
        }

        #tableDiv .row .com-md-6 {
            text-align: center !important;
            margin-left: 15px;
            margin-right: 20px;
        }
    </style>
}
<div class="row">
    @*<img src="~/img/Optometrisit Inspection Factory.png" class="img-fluid" />*@
    <h2 id="mainHeading" class="control-label"> Goths Enrollment </h2>
</div>

<div class="row">

    <div class="form-check" id="DivFormModes">
        <div class="col-lg-2">
            <label class="form-check-label"> Neighbourhoods</label>
        </div>
        <div class="col-lg-2">
            <input class="form-check-input readonly" type="checkbox" id="chkCompanies" />
            <label class="form-check-label" for="chkCompanies">Companies</label>

        </div>
        <div class="col-lg-2">
            <input class="form-check-input readonly" type="checkbox" id="chkGoth" />
            <label class="form-check-label" for="chkGoth">Goths</label>

        </div>
        <div class="col-lg-2">
            <input class="form-check-input readonly" type="checkbox" id="chkLocalities" />
            <label class="form-check-label" for="chkLocalities">Localities</label>

        </div>
        <div class="col-lg-4">
            <input class="form-check-input readonly" type="checkbox" id="chkPublicSpaces" />
            <label class="form-check-label" for="chkPublicSpaces">Public Spaces</label>

        </div>
    </div>
</div>
<br />
<div class="row">

    <div class="form-check" id="DivFormMode">


        <div class="col-lg-2">
            <label class="form-check-label" for="chkNew">New</label>
            <input class="form-check-input readonly" type="checkbox" id="chkNew" />
        </div>
        <div class="col-lg-2">
            <label class="form-check-label" for="chkDisplay">Display</label>
            <input class="form-check-input readonly" type="checkbox" id="chkDisplay" />
        </div>
        <div class="col-lg-2">
            <label class="form-check-label" for="chkEdit">Edit</label>
            <input class="form-check-input readonly" type="checkbox" id="chkEdit" />
        </div>
    </div>
</div>
<br />

