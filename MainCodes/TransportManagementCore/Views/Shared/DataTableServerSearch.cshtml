 
@{
    string URL, Title;
    if (Model.Contains(";"))
    {
        URL = Model.Split(';')[0];
        Title = Model.Split(';')[1];
    }
    else
    {
        URL = Model;
        Title = "";
    }
}

<div class="row mt pb-lg-5">
    <div class="col-lg-12">
        <div class="row form-panel" >
            @{ if (!string.IsNullOrEmpty(Title))
                {
                    <h4 ><i class="fa fa-angle-right"></i> @Title</h4>
                    <hr>
                }
            }
            <table  data-url="@URL" id="data-table-server-side-search" class="table table-striped table-advance table-hover"></table>
        </div>
    </div>
</div>
 