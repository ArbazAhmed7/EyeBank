
@{

    string ModalName, ModalURL, ModalTitle, Name;
    int paramCount = Model.Split(';').Length - 1;
    bool isEditable = true;

    if (paramCount == 3)
    {
        ModalURL = Model.Split(';')[0];
        ModalName = Model.Split(';')[1];
        ModalTitle = Model.Split(';')[2];
        isEditable = Model.Split(';')[3].ToLower() == "true";
    }
    else if (paramCount == 2)
    {
        ModalURL = Model.Split(';')[0];
        ModalName = Model.Split(';')[1];
        ModalTitle = Model.Split(';')[2];
    }
    else if (paramCount == 1)
    {
        ModalURL = Model.Split(';')[0];
        ModalName = Model.Split(';')[1];
        ModalTitle = "Select";
    }
    else
    {
        ModalURL = Model;
        ModalName = "Default";
        ModalTitle = "Select";
    }

}

<label class="control-label">@ModalTitle *</label>
<div class="modal fade" id="lookup-modal-@ModalName" tabindex="-1" role="dialog" aria-labelledby="lookupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="row">
                    <div class="col-md-10">
                        <h3 class="modal-title" id="lookupModalLabel">@ModalTitle</h3>
                    </div>
                    <div class="col-md-2">
                        <button type="button" style="opacity:1" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" style="color:white; font-size:25px; font-weight: bold;">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-body" style="padding-bottom:100px">
                <div style="text-align: center">
                    <span id="loader" style="display: inline-block;" class="loader fa fa-spinner fa-spin fa-3x w-100"></span>
                </div>

                <table id="table-lookup-@ModalName" class="table table-striped table-advance table-hover"></table>

                <div class="row pull-left" style="margin-top: 12px; margin-left: 08px;">
                    <button onclick="select()" class="btn btn-theme"><i class="fa fa-check"></i>&nbsp;&nbsp;Select</button>
                    <a class="btn btn-danger" data-toggle="modal" data-target="#lookup-modal-@ModalName"><i class="fa fa-sign-out"></i>&nbsp;&nbsp;Cancel</a>
                </div>

            </div>

        </div>
    </div>
</div>

<input type="hidden" id="lookup-@ModalName-id" />

@{
    if (isEditable)
    {
        <div id="lookup2-input-group-@ModalName" class="input-group bootstrap-timepicker">
            <input disabled type="text" id="lookup-@ModalName-text" class="form-control timepicker-default" placeholder="@ModalTitle" />
            <span id="lookup-button-span-@ModalName" class="input-group-btn">
                <button id="lookup-button-@ModalName" data-name="@ModalName" data-url="@ModalURL" data-toggle="modal" data-target="#lookup-modal-@ModalName" data-id="lookup-button-@ModalName" class="btn btn-theme" type="button"><i class="fa fa-search"></i></button>
            </span>
        </div>
    }
    else
    {
        <input disabled type="text" id="lookup-@ModalName-text" class="form-control" placeholder="@ModalTitle" autocomplete="off" />
    }
}









